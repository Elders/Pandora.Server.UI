@model Tuple<string, ConfigurationDTO>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{var cluster = Model.Item2.Clusters.Single(x => x.Cluster.Name == Model.Item1);}

<div class="modal fade" id="machineModal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                <h4 class="modal-title">Add Machine</h4>
            </div>
            <div class="modal-body">

                <form action="@(HttpContextAccessor.HttpContext.Request.Path)/AddMachine" method="post">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="form-group">
                                <label for="machineName">Machine Name: </label>
                                <input type="text" name="machineName" id="machineName" class="form-control" required />
                            </div>
                            <div class="form-group">
                                <input class="btn btn-success" type="submit" name="submit" value="Add" />
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>

<div class="row">
    <div class="col-md-12">
        <div class="row">
            <h2>@Model.Item1</h2>
        </div>
        <hr />
        <div class="col-lg-9">
            <form action="" method="post" class="col-md-12">
                <div class="row">
                    <h4>Cluster settings</h4>
                </div>
                <div class="table-responsive row">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Key</th>
                                <th>Value</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var setting in cluster.Settings)
                            {
                                @Html.EditorFor(x => setting,
                                        "SettingEditor",
                                        new
                                        {
                                            IsDisabled = cluster.Cluster.Access.HasAccess(Access.WriteAccess) ? string.Empty : "disabled",
                                            CanEditKey = false
                                        })
                            }
                        </tbody>
                    </table>
                </div>
                @if (cluster.Cluster.Access.HasAccess(Access.WriteAccess))
                {
                    <hr />
                    <div class="row">
                        <input class="btn btn-success" type="submit" name="submit" value="Save" />
                    </div>
                }
            </form>
        </div>
        <div class="col-lg-3">
            <div class="row">
                <h4>Machines</h4>
            </div>
            <ul class="row list-group">
                @foreach (var machine in Model.Item2.Machines.Where(x => x.Cluster.Name == Model.Item1))
                {
                    <li class="list-group-item">
                        <a href="~/Projects/@(Model.Item2.ProjectName)/@(Model.Item2.ApplicationName)/@(Model.Item1)/@(machine.Name)">
                            @machine.Name
                        </a>
                        <a class="pull-right" href="~/Projects/@(Model.Item2.ProjectName)/@(Model.Item2.ApplicationName)/@(Model.Item1)/@(machine.Name)/Delete"
                           onclick="javascript:return confirm('Delete @(machine.Name)?')">
                            <i class="fa fa-trash"></i>
                        </a>
                    </li>
                }
            </ul>
            <a class="row btn btn-primary" href="#" data-toggle="modal" data-target="#machineModal">
                Add new
            </a>
        </div>
    </div>
</div>